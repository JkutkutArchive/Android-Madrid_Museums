<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuseumDetailActivity"
    android:padding="@dimen/normal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvName"
        android:text="Name todo todo"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:id="@+id/txtvAddress"
        android:text="@string/address_template"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@id/txtvName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:id="@+id/txtvDescription"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@id/txtvAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvScheduleTitle"
        android:text="Horario:"
        android:textSize="@dimen/subtitle_text_size"
        android:layout_marginTop="@dimen/normal_margin"
        app:layout_constraintTop_toBottomOf="@id/txtvDescription"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:id="@+id/txtvSchedule"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintTop_toBottomOf="@id/txtvScheduleTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>